	<div id="signUpModalContainer">
		<!-- Trigger/Open The Modal -->
		<button id="signUpBtn">SignUp</button>

		<!-- The Modal -->
		<div id="signUpModal" class="modal">

			<!-- Modal content -->
			<div class="modal-content">
				<div class="modal-header">
					<span class="close">×</span>
					<h2>SignUp</h2>
				</div>
